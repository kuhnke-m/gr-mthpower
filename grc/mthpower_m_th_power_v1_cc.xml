<?xml version="1.0"?>
<block>
  <name>m_th_power_v1_cc</name>
  <key>mthpower_m_th_power_v1_cc</key>
  <category>[mthpower]</category>
  <import>import mthpower</import>
  <make>mthpower.m_th_power_v1_cc()</make>

  <param>
    <name>Block Size = Vec Length</name>
    <key>N</key>
    <type>int</type>
  </param>
  <param>
    <name>M (As in 'M'-PSK)</name>
    <key>M</key>
    <type>int</type>
  </param>
  <param>
    <name>Constant Phase offset</name>
    <key>phase</key>
    <type>float</type>
  </param>

  <sink>
    <name>in</name>
    <type>complex</type>
    <vlen>$N</vlen>
  </sink>

  <source>
    <name>out</name>
    <type>complex</type>
    <vlen>$N</vlen>
  </source>
</block>
